<!-- views/connect-local.ejs -->
<!doctype html>
<html>
<head>
    <title>Forgot password</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-user"></span> Forget password</h1>

	<% if (message) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>
  <% if (emailSent) { %>
        <h5>
		We send you an email with a link for reseting your password. It might take up to 5 minutes. The link will be 24 hours valid.
		</h5>
    <% }  else { %>

    <!-- LOGIN FORM -->
    <form action="/forget" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
		
        <button type="submit" class="btn btn-warning btn-lg">Submit</button>
    </form>
    <% }  %>
    <hr>

    <p><a href="/login">Go back</a></p>

</div>
</div>
</body>
</html>